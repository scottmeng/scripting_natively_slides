<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
	<TabView>
		<TabView.items>
			<TabViewItem title="welcome">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout>
              <Button text="TAP" tap="{{ tapAction }}" />
              <Button text="Jump" tap="{{ jumpAway }}"/>
              <Label text="{{ message }}" cssClass="message" textWrap="true"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="content">
        <TabViewItem.view>
        	<StackLayout>
        		<Label text="{{ status }}"/>
          	<Button text="fetch" tap="{{ fetchMyTweets }}"/>
        		<ListView items="{{ items }}">
        			<ListView.itemTemplate>
        				<StackLayout orientation="horizontal" cssClass="item">
                  <Label text="{{ content }}" textWrap="true" width="300"/>
                  <Image src="{{ img }}"/>
                </StackLayout>
        			</ListView.itemTemplate>
        		</ListView>
        	</StackLayout>
        </TabViewItem.view>
      </TabViewItem>
		</TabView.items>
	</TabView>
</Page>